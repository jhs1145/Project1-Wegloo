<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <TextView
        android:text="Title"
        android:layout_width="match_parent"
        android:textSize="25sp"
        android:layout_height="60dp"
        android:gravity="center_horizontal"
        android:id="@+id/activityvote_result_textview_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activityvote_result_textview_totalcount"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="left"
            android:text="TotalCount"
            android:textSize="15sp"
            android:layout_weight="3"
            />

        <TextView
            android:id="@+id/activityvote_result_textview_date"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="right"
            android:text="Date"
            android:textSize="15sp"
            android:layout_weight="1"/>
    </LinearLayout>

    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activityvote_result_listview" />

</LinearLayout>