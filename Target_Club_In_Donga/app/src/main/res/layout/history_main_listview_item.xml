<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:id="@+id/history_main_listview_item_linearlayout"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    >

    <CheckBox
        android:id="@+id/history_main_listview_item_checkbox_year"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1.2"
        android:clickable="false"
        android:focusable="false"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/history_main_listview_item_textview_year"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="2.5"
        android:gravity="center"
        android:textSize="18dp"
        />

    <CheckBox
        android:id="@+id/history_main_listview_item_checkbox"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1.2"
        android:clickable="false"
        android:focusable="false"
        android:visibility="gone"
        />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/history_main_listview_item_textview_date"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/history_main_listview_item_textview_content"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/history_main_listview_item_imageview"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="2"
        android:layout_gravity="right"
        android:scaleType="fitXY"
        android:background="@color/color_WhiteGray"
        />


</LinearLayout>