<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/layout_rounded"
    android:padding="20dp">

    <TextView
        style="@style/Content_Text_Style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:textSize="20dp"
        android:gravity="center"
        android:text="지각시간을 입력해주세요" />

    <EditText
        android:id="@+id/activity_attend_tardy_time_check_edittext_tardy_time"
        style="@style/Content_Text_Style"
        android:hint="분 단위로 입력해주세요"
        android:inputType="number"
        android:digits="0123456789"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:weightSum="1">
        <Button
            android:id="@+id/activity_attend_tardy_time_check_button_cancel"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="취소"
            android:textSize="18dp"
            android:paddingTop="15dp"
            android:textStyle="bold"
            android:background="#00000000"
            android:textColor="@color/color_MainColor"/>
        <Button
            android:id="@+id/activity_attend_tardy_time_check_button_confirm"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="확인"
            android:textStyle="bold"
            android:paddingTop="15dp"
            android:textSize="18dp"
            android:background="#00000000"
            android:textColor="@color/color_MainColor"/>
    </LinearLayout>
</LinearLayout>