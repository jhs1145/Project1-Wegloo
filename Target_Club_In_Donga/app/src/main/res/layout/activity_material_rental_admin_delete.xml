<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/layout_rounded"
    android:padding="20dp">

    <TextView
        style="@style/Content_Text_Style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:textSize="20dp"
        android:gravity="center"
        android:text="이 물품을 제거할까요?" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:weightSum="1">
        <Button
            android:id="@+id/activity_material_rental_admin_delete_button_cancel"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="취소"
            android:textSize="18dp"
            android:paddingTop="15dp"
            android:textStyle="bold"
            android:background="#00000000"
            android:textColor="@color/color_MainColor"/>
        <Button
            android:id="@+id/activity_material_rental_admin_delete_button_confirm"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="확인"
            android:textStyle="bold"
            android:paddingTop="15dp"
            android:textSize="18dp"
            android:background="#00000000"
            android:textColor="@color/color_MainColor"/>
    </LinearLayout>
</LinearLayout>